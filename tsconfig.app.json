{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/*.vue", "src/**/*.json"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"target": "es2017",
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": ["ESNext"]
	}
}
